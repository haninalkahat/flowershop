generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String     @id @default(uuid())
  name          String?    // Deprecated in favor of localized names, kept for backward compatibility
  name_tr       String?
  name_en       String?
  name_ar       String?
  description   String?    // Deprecated in favor of localized descriptions, kept for backward compatibility
  description_tr String?
  description_en String?
  description_ar String?
  images        String[]   // Array of 4 images
  videoUrl      String?    // Optional video URL
  originalPrice Decimal
  discountPrice Decimal?
  flowerType    String     @default("Mixed")
  stemLength    Int?
  // New Fields
  origin        String?    @default("Holland")
  freshness     String?    @default("Guaranteed 7 Days")
  height        String?    // e.g. "40cm" or "60cm"
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  isFeatured    Boolean    @default(false)
  variants      ProductVariant[]
  CartItem      CartItem[]
  OrderItems    OrderItem[]
  WishlistItems WishlistItem[]
  questions     ProductQuestion[]
  reviews       Review[]
}

model ProductVariant {
  id        String  @id @default(uuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  colorName String
  images    String[] // Variant specific images
  price     Decimal? // Variant specific price
}

model User {
  id          String   @id @default(uuid())
  fullName    String
  email       String   @unique
  phoneNumber String?  @unique
  address     String?
  city        String?
  birthYear   Int?
  password    String
  resetToken        String?
  resetTokenExpiry  DateTime?
  cart              Cart?
  orders            Order[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  country           String?  // Made optional initially to support existing users if any (though we cleared DB)
  image             String?
  googleId          String?  @unique
  wishlist          Wishlist?
  messages          OrderMessage[]
  questions         ProductQuestion[]
  reviews           Review[]
}

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id])
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(uuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity        Int
  selectedColor   String?
}

model Wishlist {
  id        String     @id @default(uuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id])
  items     WishlistItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model WishlistItem {
  id         String   @id @default(uuid())
  wishlistId String
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  addedAt    DateTime @default(now())

  @@unique([wishlistId, productId])
}

enum OrderStatus {
  AWAITING_PAYMENT
  PAID
  PREPARING
  DELIVERED
  REJECTED
  CANCELED
}

model Order {
  id          String         @id @default(uuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id])
  items       OrderItem[]
  totalAmount Decimal
  status      OrderStatus    @default(AWAITING_PAYMENT)
  paymentMethod PaymentMethod @default(BANK_TRANSFER)
  receipt     PaymentReceipt?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  messages    OrderMessage[]
  isNewOrder  Boolean        @default(true)
  locale      String         @default("en")
}

enum PaymentMethod {
  BANK_TRANSFER
  WESTERN_UNION
}

model OrderItem {
  id            String  @id @default(uuid())
  orderId       String
  order         Order   @relation(fields: [orderId], references: [id])
  productId     String
  product       Product @relation(fields: [productId], references: [id])
  quantity      Int
  price         Decimal
  selectedColor String?
}


model PaymentReceipt {
  id        String   @id @default(uuid())
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id])
  imageUrl  String
  uploadedAt DateTime @default(now())
}

model OrderMessage {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  isAdmin   Boolean  @default(false)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  readAt    DateTime?
}

model ProductQuestion {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  question  String
  answer    String?
  isRead        Boolean  @default(false)
  isReadByAdmin Boolean  @default(false)
  isAnswerRead  Boolean  @default(false)
  createdAt     DateTime @default(now())
  answeredAt DateTime?
}

model Review {
  id        String   @id @default(uuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}
